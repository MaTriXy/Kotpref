<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.chibatching.kotprefsample">

    <application
        android:name=".SampleApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".livedata.LiveDataSampleActivity"
            android:label="@string/live_data_sample"
        />
        <activity
            android:name=".preferencefragment.PreferenceFragmentSampleActivity"
            android:label="@string/preference_fragment_sample"
        />
    </application>
</manifest>
